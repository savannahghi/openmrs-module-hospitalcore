<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.hospitalcore.model">

	<class name="InventoryStore" table="inventory_store" batch-size="500">

		<id name="id" type="int" column="id" unsaved-value="0">
				<generator class="native" />
		</id>
		<property name="name" column="name" />
		<property name="createdOn" column="created_on"  />
		<property name="createdBy" column="created_by" length="255" />
		<many-to-one name="role" column="role" class="org.openmrs.Role" foreign-key="fk_inventorystore_role"/>
		<property name="retired" column="retired"  />
		<property name="code" column="code"  />
		<property name="isDrug" column="is_drug"  />
		<!-- many-to-one name="parent" class="org.openmrs.module.hospitalcore.model.InventoryStore"
	        column="parent_id"  lazy="false" /-->
		<set name="parentStores" table="inventory_store_relationship" cascade="none" lazy="false">
            <key column="inventory_store_child_id" />
            <many-to-many column="inventory_store_parent_id"  class="org.openmrs.module.hospitalcore.model.InventoryStore"/>
        </set>
    
	    <set name="subStores"  table="inventory_store_relationship" cascade="none" lazy="false" >
	      <key column="inventory_store_parent_id"/>
	      <many-to-many column='inventory_store_child_id' class="org.openmrs.module.hospitalcore.model.InventoryStore"/>
	    </set>
	</class>
</hibernate-mapping>
